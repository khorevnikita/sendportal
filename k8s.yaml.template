apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${SITE_NAME}
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 100%
      maxUnavailable: 0
  selector:
    matchLabels:
      app: ${SITE_NAME}
  template:
    metadata:
      labels:
        app: ${SITE_NAME}
    spec:
      containers:
        - name: ${SITE_NAME}
          image: ${IMAGE_NAME}
          imagePullPolicy: Always
          ports:
            - containerPort: 80
              protocol: TCP
          resources:
            limits:
              cpu: 1000m
            requests:
              cpu: 500m
          command: ["/entrypoint.sh"]
        # HACK: ALB has a race condition between deregistering endpoint and pod termination.
          lifecycle:
            preStop:
              exec:
                command: ["sleep", "300"]
      terminationGracePeriodSeconds: 180

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${SITE_NAME}-cron
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 100%
      maxUnavailable: 0
  selector:
    matchLabels:
      app: ${SITE_NAME}
  template:
    metadata:
      labels:
        app: ${SITE_NAME}
    spec:
      containers:
        - name: ${SITE_NAME}
          image: ${IMAGE_NAME}
          imagePullPolicy: Always
          ports:
            - containerPort: 80
              protocol: TCP
          resources:
            limits:
              cpu: 1000m
            requests:
              cpu: 500m
          command: ["/entrypoint.sh"]
          args: ["cron"]
          env:
          - name: SQS_QUEUE
            value: ${SQS_QUEUE}
