      secretName: ${SITE_NAME}-tls
  rules:
    - host: ${HOST_NAME}
      http:
        paths:
          - path: /
            backend:
              serviceName: ${SITE_NAME}
              servicePort: 8080
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: ${SITE_NAME}
  name: ${SITE_NAME}
spec:
  ports:
    - name: http
      port: 80
      targetPort: 8080
      protocol: TCP
  selector:
    app: ${SITE_NAME}
  type: ClusterIP
